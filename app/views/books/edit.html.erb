<h1>Editing Book</h1>

<%= form_with model: @book, url:bookpatch_path(@book.id), method: :patch do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<%= f.button 'Update Book' %>

<% end %>

<%= link_to 'show', bookshow_path(@book.id) %>
<%= link_to 'back', '/books/index' %>